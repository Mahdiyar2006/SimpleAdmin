@using VideoShop.Core.Domains
@using VideoShop.Services.Services;
@model ICollection<Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <p>Courses</p>
                    <a href="/Courses/Create" class="btn btn-success">Create</a>
                </div>
                <div class="card-body">
                    <table id="table_id" class="display">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Subject</th>
                                <th>Content</th>
                                <th>Category Course</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CourseName</td>
                                    <td>@item.CourseSubject</td>
                                    <td>@item.Content</td>
                                    <td>@(new CategoryCourseService().Get(item.CategoryCourseId).Title)</td>
                                    <td><a href="/Courses/Edit?Id=@(item.Id)" class="btn btn-primary">Edit</a></td>
                                    <td><a href="/Courses/Details?Id=@(item.Id)" class="btn btn-warning">Details</a></td>
                                    <td><a href="/Courses/Delete?Id=@(item.Id)" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        let table = new DataTable('#table_id', {
    });
</script>


