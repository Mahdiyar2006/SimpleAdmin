@using VideoShop.DataLayer
@{
    MainDbContext context = new MainDbContext();
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    Home
                </div>
                <div class="card-body">
                    <table id="table_id" class="display">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Column</th>
                                <th>Row</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>App User</td>
                                <td>4</td>
                                <td>@(context.AppUsers.Count())</td>
                                <td><a href="/Users/Index" class="btn btn-primary">Open</a></td>
                            </tr>
                            <tr>
                                <td>Categroy Course</td>
                                <td>1</td>
                                <td>@(context.CategoryCourses.Count())</td>
                                <td><a href="/CategoryCourses/Index" class="btn btn-primary">Open</a></td>

                            </tr>
                            <tr>
                                <td>Select Course</td>
                                <td>2</td>
                                <td>@(context.SelectCourses.Count())</td>
                                <td><a href="/SelectCourses/Index" class="btn btn-primary">Open</a></td>

                            </tr>
                            <tr>
                                <td>Course</td>
                                <td>5</td>
                                <td>@(context.Courses.Count())</td>
                                <td><a href="/Courses/Index" class="btn btn-primary">Open</a></td>

                            </tr>
                            <tr>
                                <td>Teacher</td>
                                <td>3</td>
                                <td>@(context.Teachers.Count())</td>
                                <td><a href="/Teachers/Index" class="btn btn-primary">Open</a></td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        let table = new DataTable('#table_id', {
    });
</script>

