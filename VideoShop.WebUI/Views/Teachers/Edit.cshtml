@using VideoShop.Services.Services;
@using VideoShop.WebUI.Controllers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var item = new TeacherService().GetAppTeacher(ViewBag.Id);
}


<div style="margin-top:10px" class="container">
    <div class="card">
        <div class="card-header">
            Edit
        </div>
        <div class="card-body">
            <form class="col-12 align-middle form-group" action="/Teachers/EditOP" method="post">
                <input value="@item.Id" type="hidden" name="id" />
                <p>Name: </p>
                <input class="form-control" value="@item.Name" type="text" name="name" />

                <p>Age: </p>
                <input class="form-control" value="@item.Age" type="text" name="age" />

                <p>Address: </p>
                <input class="form-control" value="@item.Address" type="text" name="address" />

                <br />
                <input class="btn btn-success" value="Submit" type="submit" />
            </form>

        </div>
    </div>
</div>